@page "/contractor/group/create/{parentId:int}"
@inject HttpClient http
@inject NavigationManager uriHelper
<FormCTG ButtonText="@Properties.Dictionary.sharedCreate" contractorGroup="@contractorGroup" Submit="@CreateContractorGroup" />

@code {
    [Parameter] public int parentId { get; set; }
    ContractorGroup contractorGroup = new ContractorGroup();
    async Task CreateContractorGroup()
    {
        await http.PostAsJsonAsync($"api/contractor/group/addChild/{parentId}", contractorGroup);
        uriHelper.NavigateTo("contractor");
    }
}
@page "/transaction/create"
@inject HttpClient http
@inject NavigationManager uriHelper
<FormTRN ButtonText="@Properties.Dictionary.sharedCreate" transactionHeader="@transactionHeader" Submit="@CreateTransaction" />
@code {
    TransactionHeader transactionHeader = new TransactionHeader() ;
    async Task CreateTransaction()
    {

        await http.PostAsJsonAsync("api/transaction", transactionHeader);
        uriHelper.NavigateTo("transaction");
    }
}